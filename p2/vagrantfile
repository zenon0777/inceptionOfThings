Vagrant.configure("2") do |config|
  config.vm.define "adaifiS" do |server|
    server.vm.box = "debian/bullseye64"
    server.vm.hostname = "PlaneS"
    server.vm.network "private_network", ip: "192.168.56.110"
    server.vm.provision "file", source: '~/.ssh/id_rsa.pub' , destination: "~/.ssh/me.pub"
    server.vm.provision "file", source: "./cluster_setup/web-app-1/web-app-1-deployement.yaml" , destination: "/vagrant/web-app-1-deployement.yaml"
    server.vm.provision "file", source: "./cluster_setup/web-app-1/web-app-1-service.yaml" , destination: "/vagrant/web-app-1-service.yaml"
    server.vm.provision "file", source: "./cluster_setup/ingress.yaml" , destination: "/vagrant/ingress.yaml"
    server.vm.provision "file", source: "./cluster_setup/web-app-2/web-app-2-deployement.yaml" , destination: "/vagrant/web-app-2-deployement.yaml"
    server.vm.provision "file", source: "./cluster_setup/web-app-2/web-app-2-service.yaml" , destination: "/vagrant/web-app-2-service.yaml"
    server.vm.provider "virtualbox" do |vb|
      vb.memory = 2048
      vb.cpus = 2
    end
    server.vm.provision "shell", inline: <<-SHELL
        sudo cat ~/.ssh/me.pub >> /home/vagrant/.ssh/authorized_keys
        mkdir -p /root/.ssh
        cat /home/vagrant/.ssh/me.pub >> /root/.ssh/authorized_keys
        chmod 600 /root/.ssh/authorized_keys
        apt-get update
        apt-get install -y curl git
        curl -sfL https://get.k3s.io | sh -s - --write-kubeconfig-mode 644
        curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
        sudo cat /var/lib/rancher/k3s/server/node-token > /vagrant/node-token
        sudo kubectl version --client
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-1/web-app-1-deployement.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-1/web-app-1-service.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-2/web-app-2-deployement.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-2/web-app-2-service.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-3/web-app-3-deployement.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/web-app-3/web-app-3-service.yaml
        sudo kubectl apply -f /vagrant/cluster_setup/ingress.yaml
  SHELL
  end
end
